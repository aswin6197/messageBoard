extends layout

block content
  script(src="https://code.jquery.com/jquery-3.5.1.min.js")
  script(src="javascripts/ajaxRequest.js")
  h1= title
  p Welcome to message board 
  form(method="GET",action="/logout")
    input(type="submit",value="log out")
  h2 Messages
  each msg in messages
    p   #{msg.name} : #{msg.message}
  //- input(id = "usrname",type="text",name="username",placeholder="username")
  //- p(id="username") #{username}
  input(id="message",type="text",name="message",placeholder="enter message here")
  | 
  button(onclick=`sendMessage("${username}")`) Send